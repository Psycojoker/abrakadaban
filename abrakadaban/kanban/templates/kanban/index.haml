!!! 5
%html{:ng-app => "KanBan"}
  %head
    %meta{:charset => "utf-8"}
    %title="Kanban"
    %meta{:name => "viewport", :content => "width=device-width"}
    %link{:rel => "stylesheet", :href => "{{STATIC_URL}}css/normalize.css"}
    %link{:rel => "stylesheet", :href => "{{STATIC_URL}}css/foundation.css"}
    %script{:type => "text/javascript", :src => "{{STATIC_URL}}js/angular.min.js"}
    %script{:type => "text/javascript", :src => "{% url 'kanban:kanbanjs' %}"}
    %body{:ng-controller => "WorkspaceListCtrl"}
    .row
      .large-12.columns
        %h2='{& 1+2 &}'
        %ul
          #workspaces{:ng-repeat => "workspace in workspaces"}
            %a{:href => "#workspace/{& workspace.id &}"}
              {& workspace.title &}

